@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Ogrenci Liste";
}

<h1>Öğrenci Listesi</h1>

<div id="notification" class="alert" style="display:none;"></div>

<table class="table table-bordered" id="ogrenciTable">
    <thead>
        <tr>
            <th>Ogrenci Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.OgrenciId">
                <td>@item.OgrenciId</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>
                    <a href="/Ogrenci/OgrenciDetay/@item.OgrenciId" class="btn btn-primary btn-sm">Detay</a>
                    <button class="btn btn-danger btn-sm delete-btn" data-id="@item.OgrenciId">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="OgrenciEkle" asp-controller="Ogrenci" class="btn btn-success">Yeni Öğrenci Ekle</a>

@section Scripts {
    <script src="~/js/ogrenci.js" asp-append-version="true"></script>
}